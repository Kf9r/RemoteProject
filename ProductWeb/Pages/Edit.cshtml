@page
@model ProductWeb.Pages.EditModel
@{
    ViewData["Title"] = "Редактирование материала";
}

<h2>Редактирование материала</h2>

<form method="post">
    <input type="hidden" asp-for="Material.Material_ID" />
    
    <div class="form-group">
        <label asp-for="Material.Material_Name" class="control-label">Название</label>
        <input asp-for="Material.Material_Name" class="form-control" />
        <span asp-validation-for="Material.Material_Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Material.Material_Cost" class="control-label">Стоимость</label>
        <input asp-for="Material.Material_Cost" class="form-control" />
        <span asp-validation-for="Material.Material_Cost" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>